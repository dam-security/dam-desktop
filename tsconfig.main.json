{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"]
    }
  },
  "include": [
    "src/main/**/*",
    "src/common/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "**/*.test.ts"
  ]
}